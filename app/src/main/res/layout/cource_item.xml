<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cource_item_shape">

    <ImageView
        android:id="@+id/imgViewType"
        android:layout_width="14dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_credit"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="5dp"

        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="18.83dp"
        android:text="Introduce"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgViewType"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="18.83dp" />


    <TextView
        android:id="@+id/whatIsItTV"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:text="What Is It ?"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imgViewType"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <TextView
        android:id="@+id/timeTV"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="20 min"
        android:layout_marginTop="9dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/whatIsItTV"
        app:layout_constraintTop_toBottomOf="@+id/whatIsItTV" />

    <ImageView
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/start_button_shape"
        app:layout_constraintStart_toStartOf="@+id/timeTV"
        app:layout_constraintTop_toBottomOf="@+id/timeTV" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_triangle"
        app:layout_constraintBottom_toBottomOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="@+id/startButton"
        app:layout_constraintStart_toStartOf="@+id/startButton"
        app:layout_constraintTop_toTopOf="@+id/startButton" />


    <TextView
        android:id="@+id/startTv"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="Start"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/startButton"
        app:layout_constraintBottom_toBottomOf="@+id/startButton"
        app:layout_constraintStart_toEndOf="@+id/startButton"
        android:layout_marginLeft="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>